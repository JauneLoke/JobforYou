{% extends 'layout.html.twig' %}

{% block content %}
    {{ parent() }}
    <!-- Breadcrumb -->
    <div class="alice-bg padding-top-40 padding-bottom-40">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="breadcrumb-area">
                        <h1>Job & You</h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Accueil</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Réinitialiser votre mot de passe</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->

    <!-- Candidates Details -->
    <div class="alice-bg section-padding-bottom">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="white-bg others-block">
                        <div class="padding-top-40 padding-bottom-40">
                            <div class="container">
                                <form action="{{ path('forgot_password_reset', {token: token}) }}" method="post" class="job-post-form">
                                    <div class="row">
                                        <div class="col-12">
                                            <h4>Réinitialisation de votre mot de passe</h4><br/>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group row">
                                                <label class="col-sm-5 col-form-label">Nouveau mot de passe : </label>
                                                <div class="col-sm-5">
                                                    <input type="password" class="form-control" name="password">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-12">
                                            <div class="form-group row">
                                                <label class="col-sm-5 col-form-label">Confirmez votre nouveau mot de passe : </label>
                                                <div class="col-sm-5">
                                                    <input type="password" class="form-control" name="passwordConfirm">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <input type="hidden" name="token" value="{{ token }}">
                                    <div class="form-group row">
                                        <div class="col-12 text-center">
                                            <button class="button" type="submit">Modifier</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Candidates Details End -->
{% endblock %}

